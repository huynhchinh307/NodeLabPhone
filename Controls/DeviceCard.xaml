<UserControl x:Class="NodeLabFarm.Controls.DeviceCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:NodeLabFarm.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="380">
    
    <UserControl.Resources>
        <Style x:Key="ExecutionButtonStyle" TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Width" Value="38"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
        </Style>
    </UserControl.Resources>

    <ui:Card Margin="8" Padding="0" Background="#14161F" BorderThickness="1" BorderBrush="#2D2F39" Width="220" Height="480">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>    <!-- Screen Area -->
                <RowDefinition Height="Auto"/> <!-- Info/Actions Area -->
            </Grid.RowDefinitions>

            <!-- Smartphone Frame & Screen -->
            <Border Grid.Row="0" Background="#000000" CornerRadius="16,16,0,0" Margin="4,4,4,0" ClipToBounds="True" Cursor="Hand">
                <Border.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" 
                                  Command="{Binding DataContext.OpenDeviceCommand, RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2}}"
                                  CommandParameter="{Binding}"/>
                </Border.InputBindings>
                <Grid>
                    <!-- Mock Screen Content -->
                    <Grid>
                        <Image Source="/Assets/phone_screen.png" Stretch="UniformToFill" Opacity="0.5"/>
                        <Image Source="{Binding DeviceScreen}" Stretch="UniformToFill">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Disconnected">
                                            <Setter Property="Opacity" Value="0.2"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </Grid>

                    <!-- Overlay for Offline Status -->
                    <Border Background="#99000000" Visibility="Collapsed">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="Disconnected">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="LinkDismiss24" FontSize="32" Foreground="#ef4444"/>
                            <TextBlock Text="OFFLINE" Foreground="#ef4444" FontSize="12" FontWeight="Bold" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Top Status Area: Improved for full content -->
                    <Grid VerticalAlignment="Top" Margin="8,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                         <Border Background="#CC000000" CornerRadius="4" Padding="6,2" HorizontalAlignment="Left" MaxWidth="100">
                             <StackPanel Orientation="Horizontal">
                                 <TextBlock Text="{Binding Index, StringFormat='[{0}] '}" Foreground="#3B82F6" FontSize="10" FontWeight="Bold"/>
                                 <TextBlock Text="{Binding Name}" Foreground="White" FontSize="10" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                             </StackPanel>
                         </Border>
                         
                         <!-- Script Status Badge: Wrapping enabled -->
                         <Border Grid.Column="1" Background="#CC3B82F6" CornerRadius="4" Padding="6,2" HorizontalAlignment="Right" Margin="4,0,0,0"
                                 Visibility="{Binding IsScriptRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
                             <TextBlock Text="{Binding ScriptStatus}" Foreground="White" FontSize="9" FontWeight="Bold" TextWrapping="Wrap" MaxWidth="100" TextAlignment="Right"/>
                         </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Bottom Control Panel -->
            <Border Grid.Row="1" Background="#1E2028" Padding="12" CornerRadius="0,0,12,12">
                <StackPanel>
                    <!-- Online/Offline Indicator (Small dot) -->
                    <Ellipse Width="8" Height="8" HorizontalAlignment="Right" Margin="0,0,0,8">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#4ade80"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="Disconnected">
                                        <Setter Property="Fill" Value="#f43f5e"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>

                    <!-- Script Selector -->
                    <ComboBox x:Name="ScriptSelector" 
                              ItemsSource="{Binding DataContext.AllScripts, RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2}}"
                              SelectedItem="{Binding SelectedScript}"
                              DisplayMemberPath="Name"
                              FontSize="11" Height="32" Padding="8,4" Margin="0,0,0,8"
                              VerticalContentAlignment="Center"
                              Background="#14161F" Foreground="White" BorderBrush="#3D3F49"/>

                    <!-- Action Row: Just Script Controls -->
                    <Grid>
                        <!-- Script Control Buttons - Center/Stretch -->
                        <Grid>
                            <!-- Start Button -->
                            <ui:Button Appearance="Primary" Height="36" Padding="20,0" HorizontalAlignment="Stretch"
                                       Command="{Binding DataContext.RunDeviceScriptCommand, RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2}}"
                                       CommandParameter="{Binding}">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="Play24" Foreground="White" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="Bắt đầu chạy" FontSize="12" FontWeight="Bold"/>
                                </StackPanel>
                                <ui:Button.Style>
                                    <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsScriptRunning}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ui:Button.Style>
                            </ui:Button>

                            <!-- Stop Button (Visible only when running) -->
                            <ui:Button Appearance="Danger" Height="36" Padding="20,0" HorizontalAlignment="Stretch"
                                       Command="{Binding DataContext.StopDeviceScriptCommand, RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2}}"
                                       CommandParameter="{Binding}">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="Stop24" Foreground="White" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="Dừng chạy" FontSize="12" FontWeight="Bold"/>
                                </StackPanel>
                                <ui:Button.Style>
                                    <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsScriptRunning}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ui:Button.Style>
                            </ui:Button>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </ui:Card>
</UserControl>

<UserControl x:Class="NodeLabFarm.Views.ScriptEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:editor="clr-namespace:NodeLabFarm.Controls.ScriptEditor"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <!-- We bind the entire view's content to the ScriptEditorViewModel property of the MainViewModel -->
    <Grid DataContext="{Binding ScriptEditor}">
        <Grid.ColumnDefinitions>
            <!-- Toolbox (Fixed width ~320px) -->
            <ColumnDefinition Width="320"/>
            <!-- Workflow Editor (Remaining space) -->
            <ColumnDefinition Width="*"/>
            <!-- Device Preview Section -->
            <ColumnDefinition Width="500"/>
            <!-- Logs & Variables -->
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Toolbox OR Settings -->
        <Grid Grid.Column="0" Background="#1a1c23">
            <Border BorderBrush="#2d2f39" BorderThickness="0,0,1,0" Padding="16">
                <!-- Swapping Logic -->
                <Grid>
                    <!-- Toolbox -->
                    <ContentControl>
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedStep}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                        <editor:ScriptToolbox Padding="16"/>
                    </ContentControl>

                    <!-- Settings -->
                    <ContentControl>
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="Visibility" Value="Visible"/> 
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedStep}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                        <editor:ScriptStepSettings Padding="16"/>
                    </ContentControl>
                </Grid>
            </Border>
        </Grid>

        <!-- Right Panel: Workflow Editor -->
        <Grid Grid.Column="1" Background="#0d0e12">
            <editor:ScriptWorkflow/>
        </Grid>

        <!-- Column 2: Device Preview & Inspection -->
        <Grid Grid.Column="2" Background="#1e1e24">
            <Border BorderBrush="#2d2f39" BorderThickness="1,0,1,0">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Preview Header -->
                    <TextBlock Grid.Row="0" Text="Device Preview" Foreground="#9ca3af" FontSize="12" FontWeight="Bold" Margin="0,0,0,8"/>

                    <Viewbox Grid.Row="1" MaxHeight="550" VerticalAlignment="Top" Stretch="Uniform">
                        <Border CornerRadius="35" BorderThickness="8" Padding="12" Width="280" Height="500">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#000000"/>
                                    <Setter Property="BorderBrush" Value="#333333"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsInspectLocked}" Value="True">
                                            <Setter Property="BorderBrush" Value="#ef4444"/>
                                            <Setter Property="Background" Value="#1a0000"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid ClipToBounds="True" MouseDown="Screen_MouseDown" MouseMove="PreviewContainer_MouseMove" x:Name="PreviewContainer" Background="Transparent">
                                <Image Source="{Binding ScreenImage}" Stretch="Uniform" x:Name="PreviewImage"/>
                                
                                <!-- Visual Overlay (Scales with image) -->
                                <Viewbox Stretch="Uniform" IsHitTestVisible="False">
                                    <Canvas Width="{Binding ScreenImage.PixelWidth}" Height="{Binding ScreenImage.PixelHeight}">
                                        <Rectangle Stroke="#ef4444" StrokeThickness="4"
                                                   Canvas.Left="{Binding RectX}"
                                                   Canvas.Top="{Binding RectY}"
                                                   Width="{Binding RectWidth}"
                                                   Height="{Binding RectHeight}">
                                            <Rectangle.Effect>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="Black" Opacity="0.8"/>
                                            </Rectangle.Effect>
                                            <Rectangle.Style>
                                                <Style TargetType="Rectangle">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RectWidth}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Rectangle.Style>
                                        </Rectangle>
                                    </Canvas>
                                </Viewbox>

                                <!-- Tooltip Overlay for coordinate info -->
                                <Border VerticalAlignment="Top" HorizontalAlignment="Center" Background="#AA000000" CornerRadius="10" Padding="8,4" Margin="0,10,0,0" IsHitTestVisible="False">
                                     <StackPanel Orientation="Horizontal">
                                         <ui:SymbolIcon Symbol="LockClosed16" Margin="0,0,6,0" Visibility="{Binding IsInspectLocked, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                         <TextBlock Text="{Binding InspectInfo}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                     </StackPanel>
                                </Border>

                                <!-- Overlay for refresh -->
                                <ui:Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" 
                                           Appearance="Secondary" Padding="6" Command="{Binding CaptureScreenCommand}"
                                           ToolTip="Chụp lại &amp; Quét XML">
                                    <ui:SymbolIcon Symbol="ArrowSync24" FontSize="16"/>
                                </ui:Button>
                            </Grid>
                        </Border>
                    </Viewbox>

                    <!-- Bottom Part: Dump Content -->
                    <Border Grid.Row="2" Background="#16181d" CornerRadius="12" Padding="0" Margin="0,12,0,0" BorderBrush="#2d2f39" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <Border Background="#21232b" Padding="8,4" CornerRadius="12,12,0,0">
                                <Grid>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <!-- XPath Section -->
                                        <Border Background="#1e3a8a" CornerRadius="4" Padding="6,2" Margin="0,0,4,0" ToolTip="Click để copy XPath">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="XPath: " Foreground="#93c5fd" FontSize="10" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding SelectedXPath}" Foreground="White" FontSize="10"/>
                                                <ui:Button Appearance="Transparent" Command="{Binding CopyInspectCommand}" Padding="4,0" Margin="4,0,0,0">
                                                    <ui:SymbolIcon Symbol="Copy16" FontSize="12" Foreground="White" Opacity="0.7"/>
                                                </ui:Button>
                                            </StackPanel>
                                        </Border>

                                        <!-- Coords Section -->
                                        <Border Background="#064e3b" CornerRadius="4" Padding="6,2" ToolTip="Click để copy x,y">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Coords: " Foreground="#6ee7b7" FontSize="10" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding SelectedCoords}" Foreground="White" FontSize="10"/>
                                                <ui:Button Appearance="Transparent" Command="{Binding CopyCoordsCommand}" Padding="4,0" Margin="4,0,0,0">
                                                    <ui:SymbolIcon Symbol="Copy16" FontSize="12" Foreground="White" Opacity="0.7"/>
                                                </ui:Button>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <ScrollViewer Grid.Row="1" MaxHeight="250" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding HoveredElement}" Margin="8">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Key}" Foreground="#9ca3af" FontSize="10" FontWeight="Bold"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Value}" Foreground="#fbbf24" FontSize="10" TextWrapping="Wrap"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Extra Right Panel: Logs & Variables -->
        <Grid Grid.Column="3" Background="#1a1c23">
            <Border BorderBrush="#2d2f39" BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Logs Section -->
                    <DockPanel Grid.Row="0">
                        <Border DockPanel.Dock="Top" Background="#21232b" Padding="12,8" BorderBrush="#2d2f39" BorderThickness="0,0,0,1">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="DocumentText24" FontSize="16" Margin="0,0,8,0" Foreground="#60a5fa"/>
                                    <TextBlock Text="Nhật ký" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                                <ui:Button HorizontalAlignment="Right" Appearance="Transparent" Padding="4" Command="{Binding ClearLogsCommand}" ToolTip="Xóa log">
                                    <ui:SymbolIcon Symbol="Delete24" FontSize="14" Foreground="#9ca3af"/>
                                </ui:Button>
                            </Grid>
                        </Border>
                        <ListBox ItemsSource="{Binding Logs}" Background="Transparent" BorderThickness="0" Padding="8" Foreground="#d1d5db" FontSize="11">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,0,0,4" Foreground="#e5e7eb"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </DockPanel>

                    <!-- Separator -->
                    <Border Grid.Row="1" Height="1" Background="#2d2f39"/>

                    <!-- Variables Section -->
                    <DockPanel Grid.Row="2">
                        <Border DockPanel.Dock="Top" Background="#21232b" Padding="12,8" BorderBrush="#2d2f39" BorderThickness="0,0,0,1">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="Code24" FontSize="16" Margin="0,0,8,0" Foreground="#34d399"/>
                                    <TextBlock Text="Danh sách biến" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                                <ui:Button HorizontalAlignment="Right" Appearance="Transparent" Padding="4" Command="{Binding AddVariableCommand}" ToolTip="Thêm biến">
                                    <ui:SymbolIcon Symbol="Add24" FontSize="14" Foreground="#34d399"/>
                                </ui:Button>
                            </Grid>
                        </Border>
                        <ListBox ItemsSource="{Binding Variables}" Background="Transparent" BorderThickness="0" Padding="8">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Style.Triggers>
                                        <!-- Fix text color when item is selected -->
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#2d2f39"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Key Editor -->
                                        <ui:TextBox Grid.Row="0" Grid.Column="0" 
                                                    Text="{Binding Key, UpdateSourceTrigger=PropertyChanged}" 
                                                    FontSize="10" FontWeight="Bold" Foreground="#9ca3af" 
                                                    Padding="4,2" MinHeight="24" Background="Transparent" BorderThickness="0,0,0,1" BorderBrush="#2d2f39"/>
                                        
                                        <!-- Delete Button -->
                                        <ui:Button Grid.Row="0" Grid.Column="1" Padding="4,0" Appearance="Transparent" 
                                                   Command="{Binding DataContext.RemoveVariableCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                   CommandParameter="{Binding}">
                                            <ui:SymbolIcon Symbol="Dismiss16" FontSize="10" Foreground="#f87171"/>
                                        </ui:Button>

                                        <!-- Value Editor -->
                                        <ui:TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                                    Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                                                    FontSize="11" Foreground="#60a5fa" 
                                                    Padding="4,2" MinHeight="24" Background="#0d0e12" BorderThickness="0" Margin="0,2,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>

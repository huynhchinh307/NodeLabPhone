<UserControl x:Class="NodeLabFarm.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid Margin="24">
        <StackPanel MaxWidth="600" HorizontalAlignment="Left" Width="600">
            <TextBlock Text="Settings" FontSize="32" FontWeight="Bold" Margin="0,0,0,24" Foreground="White"/>

            <!-- ADB Configuration Card -->
            <ui:Card Padding="20" Background="#1a1c23" BorderThickness="1" BorderBrush="#2d2f39">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <ui:SymbolIcon Symbol="Settings24" FontSize="18" Foreground="#3a86ff" Margin="0,0,8,0"/>
                        <TextBlock Text="ADB Configuration" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="Specify the path to your adb.exe executable. This is required for device discovery and control." 
                               TextWrapping="Wrap" Foreground="#9ca3af" Margin="0,0,0,16"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ui:TextBox Text="{Binding AdbPath, UpdateSourceTrigger=PropertyChanged}" 
                                    PlaceholderText="C:\path\to\adb.exe" 
                                    Icon="Document24"/>
                        <ui:Button Grid.Column="1" Content="Browse" Margin="8,0,0,0" 
                                   Command="{Binding BrowseAdbCommand}" Appearance="Secondary"/>
                    </Grid>

                    <ui:Button Content="Apply &amp; Restart Server" Icon="CheckmarkCircle24" Appearance="Primary" 
                               Command="{Binding ApplySettingsCommand}" HorizontalAlignment="Right"
                               Padding="16,8" Margin="0,12,0,0"/>
                </StackPanel>
            </ui:Card>

            <!-- Other Settings Placeholder -->
            <TextBlock Text="General" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,32,0,16"/>
            <ui:Card Padding="16" Background="#1a1c23" BorderThickness="1" BorderBrush="#2d2f39">
                <StackPanel>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Dark Mode" VerticalAlignment="Center" Foreground="#9ca3af"/>
                        <ui:ToggleSwitch Grid.Column="1" IsChecked="True"/>
                    </Grid>
                    <Separator Background="#2d2f39" Margin="0,8"/>
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Auto-refresh devices" VerticalAlignment="Center" Foreground="#9ca3af"/>
                        <ui:ToggleSwitch Grid.Column="1" IsChecked="True"/>
                    </Grid>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </Grid>
</UserControl>

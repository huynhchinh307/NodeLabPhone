<UserControl x:Class="NodeLabFarm.Views.ScriptsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
            <RowDefinition Height="Auto"/> <!-- Footer/Pagination -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Kịch bản" FontSize="32" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>

            <ui:TextBox Grid.Column="2" PlaceholderText="Tìm kiếm..." Width="250" VerticalAlignment="Center" Margin="0,0,16,0"
                        Text="{Binding ScriptSearchText, UpdateSourceTrigger=PropertyChanged}" Icon="Search24"/>

            <ui:Button Grid.Column="3" Appearance="Primary" Padding="16,8" Command="{Binding CreateScriptCommand}">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Add24" Margin="0,0,8,0"/>
                    <TextBlock Text="Thêm kịch bản"/>
                </StackPanel>
            </ui:Button>
        </Grid>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Scripts}" AutoGenerateColumns="False" 
                  CanUserAddRows="False" Background="Transparent" BorderThickness="0"
                  GridLinesVisibility="Horizontal" RowHeaderWidth="0" SelectionUnit="FullRow"
                  IsReadOnly="True" SelectionMode="Single"
                  RowHeight="50" HeadersVisibility="Column"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#9ca3af"/>
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="Padding" Value="12,0"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#2d2f39"/>
                </Style>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#1f2128"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#21232b"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                             <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                     <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <!-- Index -->
                <DataGridTextColumn Header="STT" Binding="{Binding Index}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#9ca3af"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Name -->
                <DataGridTemplateColumn Header="Tên kịch bản" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0">
                                <ui:SymbolIcon Symbol="Document24" FontSize="20" Foreground="#3a86ff" Margin="0,0,12,0"/>
                                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Version -->
                <DataGridTextColumn Header="Phiên bản" Binding="{Binding Version}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#e5e7eb"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="12,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Last Modified -->
                 <DataGridTextColumn Header="Thời gian sửa" Binding="{Binding LastModifiedDisplay}" Width="180">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#9ca3af"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="12,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="Thao tác" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0">
                                <ui:Button Appearance="Secondary" Padding="8" Margin="0,0,8,0" Command="{Binding DataContext.EditScriptCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}" ToolTip="Sửa">
                                    <ui:SymbolIcon Symbol="Edit24"/>
                                </ui:Button>
                                <ui:Button Appearance="Secondary" Padding="8" Foreground="#ef4444" Command="{Binding DataContext.DeleteScriptCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}" ToolTip="Xóa">
                                     <ui:SymbolIcon Symbol="Delete24" Foreground="#ef4444"/>
                                     <ui:Button.Style>
                                        <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                            <Style.Triggers>
                                                 <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#3f1616"/>
                                                    <Setter Property="BorderBrush" Value="#7f1d1d"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ui:Button.Style>
                                </ui:Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pagination -->
        <Grid Grid.Row="2" Margin="0,24,0,0">
             <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                 <TextBlock Text="Trang" Foreground="#9ca3af" VerticalAlignment="Center" Margin="0,0,8,0"/>
                 <TextBlock Text="{Binding CurrentPage}" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                 <TextBlock Text="/" Foreground="#9ca3af" VerticalAlignment="Center" Margin="4,0,4,0"/>
                 <TextBlock Text="{Binding TotalPages}" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,16,0"/>

                 <ui:Button Appearance="Secondary" Command="{Binding PreviousPageCommand}" Margin="0,0,8,0">
                     <ui:SymbolIcon Symbol="ChevronLeft24"/>
                 </ui:Button>
                 <ui:Button Appearance="Secondary" Command="{Binding NextPageCommand}">
                     <ui:SymbolIcon Symbol="ChevronRight24"/>
                 </ui:Button>
             </StackPanel>
        </Grid>
    </Grid>
</UserControl>
